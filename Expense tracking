# Expense traker
# enumerate
salary = float(input("Enter yout salary:")) 
print(salary)

def add_expense():

    
    total = []
    Category = []
    discription = []
    dates = []
    f_cost = []
    f_note = []
    f_time = []
    t_cost = []
    t_note = []
    t_time = []
    s_cost = []
    s_note = []
    s_time = []
  
    
    while True:
        user = input("\n1. add expense\n2. display expense\n3. balance\nEnter choice: ")

        if user == "1":
            # every expense
            expense = float(input("\nEnter your expense: "))
            total.append(expense)
            
            
            print("\nfood\ntravel\nshopping")
            # get category
            category = input("\nEnter the category of expense's:")
            Category.append(category)
            # get what is expense about
            diss = input("\ndescription:")
            discription.append(diss)
            # add date of expense
            date = input("\nEnter date when expense:")
            dates.append(date)
            if category=="food":
                f_cost.append(expense)
                f_note.append(diss)
                f_time.append(date)
                
            elif category=="travel":
                t_cost.append(expense)
                t_note.append(diss)
                t_time.append(date)
              
            elif category=="shopping":
                s_cost.append(expense)
                s_note.append(diss)
                s_time.append(date)
            
        elif user == "2":

            display_by = input(
                "\nTo print all data:all\nTo print by category:category\n"
            )
            if display_by == "all":
                #print all data like ['','']
                   
                    print("Expenses: ",total)
                    print("Discription: ", discription)
                    print("Category: ", Category)
                    print("Date: ", dates)

            elif display_by == "category":
                name = input("\nEnter category name: ")
                
                if name == "food":
                    print("\nThis is food expanse: ")
                    print("Expenses: ", f_cost)
                    print("Discription: ", f_note)
       
                    print("Date: ", f_time)
                    
                elif name == "travel":
                    print("\nThis is travel expanse: ")
                    print("Expenses: ", t_cost)
                    print("Discription: ", t_note)
                    
                    print("Date: ", t_time)
                elif name == "shopping":
                    print("\nThis is shopping expanse: ")
                    print("Expenses: ", s_cost)
                    print("Discription: ", s_note)
              
                    print("Date: ", s_time)
                    
        elif user == "3":
            b_user= input("\n1. total expense \n2. balance \n3. category total \n")
            if b_user =="1":
                 b_total = sum(total) 
                 print("The total expense is:",b_total)
            if b_user =="2":
                 sums = sum(total)
                 balance = salary - sums
                 print("\nThe remaining balance is: ", balance) 
            if b_user =="3":
                   u_category=input("\n1. food total\n2. travel\n3. shopping \nEnter category :")
                
                   if u_category == "1":
                      f_total= sum(f_cost)
                      print("\nthis is food total cost:", f_total)
                   if u_category == "2":
                      t_total= sum(t_cost)
                      print("\nthis is food total cost:", t_total) 
                   if u_category == "3":
                      s_total= sum(s_cost)
                      print("\nthis is food total cost:", s_total)
                
        elif user =="stop":
             print("\nEnd")
             break
             return total  





