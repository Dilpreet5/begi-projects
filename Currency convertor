# Currency converter
def dollar():
    rupee = 85.50
    aus_dollar = 1.52
    rubel = 79.30
    pound = 0.73
    yen = 144.70
    dirham = 3.67

    from_currency = input("enter currency to convert into: ")
    amount = int(input("\nenter amount to convert: "))

    if amount < int("0"):
        print("\nEnter valid amount")
    if amount == int("0"):
        amount = 0
    if from_currency == "rupee":
        money = amount * rupee
        print(money)
    elif from_currency == "aus":
        money = amount * aus_dollar
        print(money)
    elif from_currency == "rubel":
        money = amount * rubel
        print(money)
    elif from_currency == "pound":
        money = amount * pound
        print(money)
    elif from_currency == "yen":
        money = amount * yen
        print(money)
    elif from_currency == "dirham":
        money = amount * dirham
        print(money)
    else:
        print("\nEnter valid currnecy")

