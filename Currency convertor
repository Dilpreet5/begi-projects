def convertors():

    print(
        "rupee= India\ndollor= usa\naus = australia\nrubel= russia\npound= UK\nyen= japan\n"
    )
    cuntry = input("\nSelect the currency to convert : \n")

    if cuntry == "dollar":
        dollar()
    elif cuntry == "aus":
        aus_dollar()
    elif cuntry == "rubel":
        rubels()
    elif cuntry == "pound":
        pounds()
    elif cuntry == "rupee":
        rupees()
    elif cuntry == "yen":
        yens()
    else:
        print("\nEnter a valid currency...\n")

def all():

    one_tabel = input("\nEnter the currency to see all exchang rates:")

    if one_tabel == "rupee":
        print(
            "dollar = 85.28\naus = 56.13\nrubel = 1.08  \npound = 116.61\nyen = 0.59  \ndirham = 23.26"
        )
    if one_tabel == "dollar":
        print(
            "rupee=85.50\naus = 1.52\nrubel = 79.30\npound = 0.73\nyen = 144.70\ndirham= 3.67"
        )
    if one_tabel == "aus":
        print(
            "rupee=55.96\ndollar = 0.66\nrubel = 51.50  \npound = 0.48\nyen = 94.67  \ndirham = 2.24"
        )
    if one_tabel == "rubels":
        print(
            "rupee=1.09\ndollar = 85.28\naus = 0.013\npound = 0.0093\nyen = 1.84\ndirham = 0.013"
        )
    if one_tabel == "pounds":
        print(
            "rupee=116.81\ndollar = 1.37\naus = 2.08\nrubel = 107.34\nyen = 197.18\ndirham = 5.01"
        )
    if one_tabel == "yens":
        print(
            "rupee=116.81\ndollar = 1.37\naus = 2.08\nrubel = 107.34\nyen = 197.18\ndirham = 5.01"
        )

while True:
    user = input(
        "Enter convertor to convert currency \nor\nEnter tabel to see all rate of currency\n"
    )
    if user == "convertor":
        convertors()
    elif user == "tabel":
        all()
    elif user == "exit":
        print("Thank..")
    else:
        print("\ninvalid.... ")
