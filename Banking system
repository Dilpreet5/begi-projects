def transacts():
    
       global acc_balance 
       acc_balance = 500
       acc_num = None
       in_acc_num = None
       credit = 0
       debited = 0
       
       while True:
                 transact_user=input("\n1. widhrowal \n2. Deposit \n3. Check balance \n4. Exit\nEnter choice:")
    
    #widhrowal 
                 if transact_user =="1":
                    debited=float(input("\nEnter the amount to widhrowal:"))#debited in context from bank                 
                    acc_balance -=debited
                    print("\nYour remaining balance is : ", acc_balance)
              
              #deposit 
                 if transact_user =="2":
                       credit =float(input("\nEnter the amount to deposit :"))#credit in context from bank
                       
         
                       acc_balance += credit 
                       print("\nYour bank balance is: ", acc_balance)
                 

# check balances 
                 if transact_user == "3":
                   print("\n Your bank. balance is : ",acc_balance)
                 break 
#Exit
                 if transact_user == "4":
                   print("\nThanku for visiting PYBANK ... ")
          
          
          
 #celling function 
